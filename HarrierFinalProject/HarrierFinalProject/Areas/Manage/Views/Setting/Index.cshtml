
@model SettingViewModel
@{
    ViewData["Title"] = "Index";
    int order = 0;
}

<div class="container-fluid" style="width:100%;">
    <div class="container-fluid d-flex justify-content-between align-items-center" style="padding-top:50px; display:flex; justify-content:space-between; align-items:center">
        <h1>Settings</h1>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Phone</th>
                <th scope="col">Address</th>
                <th scope="col">Contact mail</th>
                <th scope="col">Header Logo</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <th scope="row">@order</th>
                <td>@Model.Setting.Phone</td>
                <td>@Model.Setting.Address</td>
                <td>@Model.Setting.Email</td>
                <td><img src="~/assets/images/@Model.Setting.HeaderLogo" style="max-width:100px" /></td>
                <td>
                    <a asp-action="edit" asp-route-id="@Model.SettingId" class="btn btn-warning">Edit</a>
                </td>
            </tr>


        </tbody>
    </table>
</div>

