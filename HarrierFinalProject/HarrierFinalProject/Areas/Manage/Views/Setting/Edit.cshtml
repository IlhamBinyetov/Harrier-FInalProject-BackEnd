
@model SettingViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Edit</h1>
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Setting.Address">Address</label>
                <input asp-for="Setting.Address" class="form-control" placeholder="Location">
                <span class="text-danger" asp-validation-for="Setting.Address"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Setting.Phone">Phone</label>
                <input asp-for="Setting.Phone" class="form-control" placeholder="Phone">
                <span class="text-danger" asp-validation-for="Setting.Phone"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Setting.Email">Email</label>
                <input asp-for="Setting.Email" class="form-control" placeholder="Email">
                <span class="text-danger" asp-validation-for="Setting.Email"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="ImageFile">ImageFile</label>
                <input asp-for="ImageFile" class="form-control" placeholder="ImageFile">
                <span class="text-danger" asp-validation-for="ImageFile"></span>

            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="index" asp-controller="setting" class="btn btn-warning">Back</a>
        </div>

    </form>
</div>
