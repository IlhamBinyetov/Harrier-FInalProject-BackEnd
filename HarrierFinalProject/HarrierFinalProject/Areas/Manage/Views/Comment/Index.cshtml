
@inject UserManager<AppUser> userManager
@model CommentsViewModel
@{
    ViewData["Title"] = "Index";
    int order = 0;
    var member = userManager.GetUserAsync(User).Result;


}

<div class="container" style="width:100%;">
    <div class="d-flex justify-content-between align-items-center pt-5">
        <div class="col-6">
            <h1>Comments</h1>

        </div>

    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col" style="font-size:14px">#</th>
                <th scope="col" style="font-size:14px"> User Name</th>
                <th scope="col" style="font-size:14px"> User Email</th>
                <th scope="col" style="font-size:14px">Comment</th>
                <th scope="col" style="font-size:14px">Post Date</th>
                <th scope="col" style="font-size:14px">Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var comment in Model?.Comments)
            {
                order++;
            <tr>
                <th scope="row">@order</th>

                <td>@comment.AppUser?.Fullname</td>
                <td style="font-size:14px">@comment.AppUser?.Email</td>
                <td style="font-size:14px">@comment.Description</td>
                <td style="font-size:14px">@comment.PostDate</td>

                <td>
                    <a asp-action="deletefetch" asp-route-id="@comment.Id" class="btn btn-danger btn-item-delete" style="font-size:14px">Delete</a>
                </td>
            </tr>
            }

        </tbody>
    </table>

