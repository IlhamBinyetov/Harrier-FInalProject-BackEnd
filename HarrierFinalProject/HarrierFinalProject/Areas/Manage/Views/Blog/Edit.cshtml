@model BlogViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Edit</h1>
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Blog.Name">Name</label>
                <input asp-for="Blog.Name" class="form-control" placeholder="Name">
                <span class="text-danger" asp-validation-for="Blog.Name"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Blog.PostedBy">PostedBy</label>
                <input asp-for="Blog.PostedBy" class="form-control" placeholder="PostedBy">
                <span class="text-danger" asp-validation-for="Blog.PostedBy"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Blog.PostDate">PostDate</label>
                <input asp-for="Blog.PostDate" class="form-control" placeholder="PostDate">
                <span class="text-danger" asp-validation-for="Blog.PostDate"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Blog.Description">Description</label>
                <input asp-for="Blog.Description" class="form-control" placeholder="Description">
                <span class="text-danger" asp-validation-for="Blog.Description"></span>

            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="ImageFile">ImageFile</label>
                <input asp-for="ImageFile" class="form-control" placeholder="ImageFile">
                <span class="text-danger" asp-validation-for="ImageFile"></span>
            </div>
            <div class="img-box mt-5" style="display: inline-block; position: relative; margin-top:10px; margin-bottom:10px">
                <input type="hidden" asp-for="Image" value="@Model?.Image" />
                <img style="max-width:100px" src="~/assets/images/@Model?.Blog?.Image" alt="Alternate Text" />
            </div>
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="index" asp-controller="blog" class="btn btn-warning">Back</a>
        </div>

    </form>
</div>

