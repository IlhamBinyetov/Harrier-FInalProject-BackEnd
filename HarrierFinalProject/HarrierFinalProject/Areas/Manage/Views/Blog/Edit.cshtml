
@model BlogViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Edit</h1>
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="PostedBy">PostedBy</label>
                <input asp-for="PostedBy" class="form-control" placeholder="PostedBy">
                <span class="text-danger" asp-validation-for="PostedBy"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="PostDate">PostDate</label>
                <input asp-for="PostDate" class="form-control" placeholder="PostDate">
                <span class="text-danger" asp-validation-for="PostDate"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Description">Description</label>
                <input asp-for="Description" class="form-control" placeholder="Description">
                <span class="text-danger" asp-validation-for="Description"></span>

            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="ImageFile">ImageFile</label>
                <input asp-for="ImageFile" class="form-control" placeholder="ImageFile">
                <span class="text-danger" asp-validation-for="ImageFile"></span>

            </div>
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="index" asp-controller="blog" class="btn btn-warning">Back</a>
        </div>

    </form>
</div>

