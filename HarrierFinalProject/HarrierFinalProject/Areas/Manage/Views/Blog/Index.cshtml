
@model BlogViewModel
@{
    ViewData["Title"] = "Index";
    int order = 0;
}

<div class="container-fluid" style="width:100%;">
    <div class="d-flex justify-content-between align-items-center pt-5">
        <div class="col-6">
            <h1>Blogs</h1>

        </div>
        <div class="col-2">
            <a asp-action="create" class="btn btn-primary">Create</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">PostDate</th>
                <th scope="col">PostedBy</th>
                <th scope="col">Image</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var blogItem in Model.Blogs)
            {
                order++;
                <tr>
                    <th scope="row">@order</th>
                    <td>@blogItem.Name</td>
                    <td>@blogItem.PostDate.ToString("MMMM dd, yyyy")</td>
                    <td>@blogItem.PostedBy</td>
                    <td><img src="~/assets/images/@blogItem.Image" style="max-width:100px" /></td>
                    <td>
                        <a asp-action="edit" asp-route-id="@blogItem.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="deletefetch" asp-route-id="@blogItem.Id" class="btn btn-danger btn-item-delete">Delete</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>

