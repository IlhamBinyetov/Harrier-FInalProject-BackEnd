@model FuelTypeViewModel
@{
    ViewData["Title"] = "Index";
    int order = 0;
}

<div class="container" style="width:100%;">
    <div class="d-flex justify-content-between align-items-center pt-5">
        <div class="col-6">
            <h1>FuelTypes</h1>

        </div>
        <div class="col-2">
            <a asp-action="create" class="btn btn-primary">Create</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fuelType in Model.FuelTypes)
            {
                order++;
                <tr>
                    <th scope="row">@order</th>
                    <td>@fuelType.Name</td>
                    <td>
                        <a asp-action="edit" asp-route-id="@fuelType.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="deletefetch" asp-route-id="@fuelType.Id" class="btn btn-danger btn-item-delete">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>


