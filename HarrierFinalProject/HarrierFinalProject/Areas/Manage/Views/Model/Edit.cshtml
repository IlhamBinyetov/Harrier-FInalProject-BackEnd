@model ModelViewModel
@{
    ViewData["Title"] = "Edit";
    var model = Model?.Model;
}

<div class="container">
    <h1>Edit</h1>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Model.Name">Name</label>
                <input asp-for="Model.Name" class="form-control" placeholder="Name">
                <span class="text-danger" asp-validation-for="Model.Name"></span>
                <select asp-for="BrandId" class="form-select" style="padding:10px; outline:none; margin-top:10px">
                    <option>Select Make</option>
                    @foreach (var brand in Model?.Brands)
                    {

                        <option selected ="@(brand.Id == model.BrandId ? "selected": null)" value="@brand.Id">@brand.Name</option>

                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="index" asp-controller="model" class="btn btn-warning">Back</a>
        </div>

    </form>
</div>


