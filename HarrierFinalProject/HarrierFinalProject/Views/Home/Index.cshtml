@model HomeViewModel
@{
    ViewData["Title"] = "Index";
    List<Car> cars = Model?.Cars;
    
}


<!-- Slider AREA START -->
<section class="slider-section">

    <div id="myCarousel" class="carousel slide" data-ride="carousel">

        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
        </ol>

        <!-- Wrapper for slides -->

        <div class="carousel-inner">

            @foreach (var slider in Model?.Sliders)
            {
                <div class="item">
                    <img src="~/assets/images/@slider.Image"
                         alt="Car Image"
                         style="width: 100%" />
                </div>
            }
            

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="filter-part">
        <form action="">
            <label for="">FIND YOUR RIGHT CAR</label>
            <br />
            <br />

            <select class="sel-example form-control" id="sel1">
                <option value="0">Select Make</option>
                <option value="1">Acura</option>
                <option value="2">Audi</option>
                <option value="3">BMW</option>
                <option value="4">Chevrolet</option>
                <option value="5">Hyundai</option>
                <option value="6">Kia</option>
                <option value="7">Mazda</option>
                <option value="8">Mercedes-Benz</option>
                <option value="9">Nissan</option>
                <option value="10">Toyota</option>
            </select>

            <select name="" id="sel2" class="sel-example form-control">
                <option value="">Select Model</option>
                <option data-val="1">CL</option>
                <option data-val="1">IlX</option>
                <option data-val="1">Ilx Hybrid</option>
                <option data-val="1">Integra</option>
                <option data-val="2">A3</option>
                <option data-val="2">A5</option>
                <option data-val="2">A7</option>
                <option data-val="2">A8</option>
                <option data-val="3">X1</option>
                <option data-val="3">X3</option>
                <option data-val="3">X5</option>
                <option data-val="3">X6</option>
                <option data-val="3">X7</option>
                <option data-val="3">Z8</option>
                <option data-val="4">Cruze</option>
                <option data-val="4">Aveo</option>
                <option data-val="4">Volt</option>
                <option data-val="5">Elantra</option>
                <option data-val="5">Sonata</option>
                <option data-val="5">Tucson</option>
                <option data-val="6">Sorento</option>
                <option data-val="6">Optima</option>
                <option data-val="6">Cerato</option>
                <option data-val="7">CX-3</option>
                <option data-val="7">CX-5</option>
                <option data-val="7">Mazda5</option>
                <option data-val="8">GL</option>
                <option data-val="8">Sprinter</option>
                <option data-val="8">E220</option>
                <option data-val="9">Sunny</option>
                <option data-val="9">X-Trail</option>
                <option data-val="9">Altima</option>
                <option data-val="10">Corolla</option>
                <option data-val="10">Prado</option>
                <option data-val="10">Land Cruiser</option>
            </select>

            <select name="" class="sel-example form-control">
                <option value="0">Select Max Price</option>
                <option value="1">$500</option>
                <option value="2">$1000</option>
                <option value="3">$2000</option>
                <option value="4">$3000</option>
                <option value="5">$10000</option>
            </select>

            <select name="" class="sel-example form-control">
                <option value="0">Select Min Year</option>
                <option value="1">2021</option>
                <option value="2">2020</option>
                <option value="3">2019</option>
                <option value="4">2018</option>
                <option value="5">2017</option>
            </select>

            <select name="" class="sel-example form-control">
                <option value="0">Select Max Mileage</option>
                <option value="1">2500 miles</option>
                <option value="2">5000 miles</option>
                <option value="3">7500 miles</option>
                <option value="4">10000 miles</option>
                <option value="5">15000 miles</option>
            </select>

            <button type="submit" class="btn btn-primary button">
                Search Vehicle
            </button>
            <div class="main-search">
                <a asp-action="advancedsearch" asp-controller="home" class="advanced-search">
                    Advanced Search
                </a>
            </div>
        </form>
    </div>

    <div class="commerce-part">
        <h6>TOP BRANDS 2019</h6>
        <h4>MODERN-CLASSIC</h4>
        <h4>INCREDIBLE</h4>
        <p>Get 40% Off On Selected Items</p>
        <button>BOOK APPOINTMENT</button>
    </div>
</section>

<section class="banner-section">
    <div class="car-types">
        <div class="cars-slide">
            <div class="car-header">
                <span> Browse By Car Type</span>
            </div>
        </div>
        <div class="car-pics">
            @foreach (var carType in Model.CarTypes)
            {
                <div>
                    <a href=""><img src="~/assets/images/@carType.Image" alt="" /></a>
                    <p class="car-names">@carType.Name</p>
                </div>
            }

    
        </div>
    </div>

    <div class="images d-flex justify-content-around">
        <div class=" col-5">
            <img src="~/assets/images/2101.jpg" alt="" />
        </div>
        <div class=" col-5">
            <img src="~/assets/images/960.jpg" alt="" />
        </div>
        
        
    </div>

    <div class="deals">
        <div class="deals-header">
            <div class="col-4 first-element">
                <h2>Deals of the Week</h2>
            </div>

            <div class="timer col-3">
                <ul id="countdown">
                    <li>
                        <span class="days">00</span>
                        <p class="days_text">Days</p>
                    </li>
                    <li class="seperator"></li>
                    <li>
                        <span class="hours">00</span>
                        <p class="hours_text">Hrs</p>
                    </li>
                    <li class="seperator"></li>
                    <li>
                        <span class="minutes">00</span>
                        <p class="minutes_text">Mins</p>
                    </li>
                    <li class="seperator"></li>
                    <li>
                        <span class="seconds">00</span>
                        <p class="seconds_text">Secs</p>
                    </li>
                </ul>
            </div>
        </div>
        <div class="deals-footer">
            @foreach (var car in cars)
            {
            <div class="car-item col-3 @(car.CarSituationId == 0 ? "sold-car": "")">
                <div class="item-info">
                    <img src="~/assets/images/@car.CarImages.FirstOrDefault(x=>x.IsPoster==true).Image" alt="" />
                    <span>@car.CarStatus?.Name</span>
                    <p><a href="">@car.Brand?.Name @car.Model?.Name</a></p>
                </div>
                <div class="seperator"></div>
                <div class="item-price">
                    <p>$ @car.Price</p>
                </div>

                <div class="other-info d-flex justify-content-evenly">
                    <div class="infos">
                        <i class="bi bi-speedometer2"></i>
                        <p>@car.Mileage</p>
                    </div>
                    <div class="infos">
                        <i class="bi bi-gear-fill"></i>
                        <p>@car.Gearbox.Name</p>
                    </div>
                    <div class="infos">
                        <div><i class="bi bi-calendar3"></i></div>
                        <p>@car.DateOfProduct.Year</p>
                    </div>
                   
                </div>
                <div class="hover-items">
                    <div class="rhombus col-4">
                        <div>
                            <a href=""><i class="bi bi-link"></i></a>
                        </div>
                    </div>
                    <div class="rhombus col-4">
                        <div>
                            <a href=""><i class="fas fa-shopping-cart"></i></a>
                        </div>
                    </div>
                    <div class="rhombus col-4">
                        <div>
                            <a href="" title="add to wishlist">
                                <i class="bi bi-suit-heart"></i>
                            </a>
                        </div>
                    </div>
                </div>
                @if(car.CarSituationId == 0)
                {
                    <div class="sold-pic">
                        <img src="~/assets/images/sold.png" alt="" />
                    </div>
                }

            </div>
            }
       

        </div>
    </div>
</section>

<section class="testimonial-section">
    <div class="slideshow-container">
        @foreach (var comment in Model.Comments)
        {
            <div class="mySlides">
                <div>
                    <img src="~/assets/./images/@comment.Image" alt="" />
                </div>
                <p class="desc">
                    @comment.Description
                </p>
                <p class="author"><span>@comment.Name</span> Happy Customer</p>
            </div>
        }




       

        <div class="dot-container">
            <span class="dot active" onclick="currentSlide(1)"></span>
            <span class="dot" onclick="currentSlide(2)"></span>
            <span class="dot" onclick="currentSlide(3)"></span>
        </div>
    </div>
</section>

<section class="best-seller-section">
    <div class="deals">
        <div class="deals-header">
            <div class="col-4 first-element">
                <h2>VERY EXPENSIVE CARS</h2>
            </div>
        </div>
        <div class="deals-footer">
            @foreach (var car in cars)
            {

                <div class="car-item col-3">
                    <div class="item-info">
                        <img src="~/assets/images/@car.CarImages.FirstOrDefault(x=>x.IsPoster==true)?.Image" alt="" />
                        <span>@car.CarStatus.Name</span>
                        <p><a href="">@car.Brand.Name @car.Model.Name</a></p>
                    </div>
                    <div class="seperator"></div>
                    <div class="item-price">
                        <p>$ @car.Price</p>
                    </div>

                    <div class="other-info d-flex justify-content-evenly">
                        <div class="infos">
                            <i class="bi bi-speedometer2"></i>
                            <p>@car.Mileage</p>
                        </div>
                        <div class="infos">
                            <i class="bi bi-gear-fill"></i>
                            <p>@car.Gearbox.Name</p>
                        </div>
                        <div class="infos">
                            <div><i class="bi bi-calendar3"></i></div>
                            <p>@car.DateOfProduct.Year</p>
                        </div>
                    </div>
                    <div class="hover-items">
                        <div class="rhombus col-4">
                            <div>
                                <a href=""><i class="bi bi-link"></i></a>
                            </div>
                        </div>
                        <div class="rhombus col-4">
                            <div>
                                <a href=""><i class="fas fa-shopping-cart"></i></a>
                            </div>
                        </div>
                        <div class="rhombus col-4">
                            <div>
                                <a href="" title="add to wishlist">
                                    <i class="bi bi-suit-heart"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }

         
        </div>
    </div>
</section>

<section class="blog-section">
    <div class="blog-header">
        <div class="col-4 header-element">
            <h2>LATEST BLOG POST</h2>
        </div>
    </div>
    <div class="blog-footer d-flex">
        @foreach (var blog in Model.Blogs)
        {
            <div class="footer-element col-4">
                <div class="blog-img">
                    <img src="~/assets/images/@blog.Image" alt="" />
                    <span class="blog-date">@blog.PostDate.ToString("yyyy dd MMM")</span>
                </div>
                <div class="pt-4 info">
                    <i class="bi bi-person"></i>
                    <span>Posted by</span>
                    <span class="poster-name">@blog.PostedBy</span>
                    <i class="bi bi-chat chat"></i>
                    <a href="">0 comments </a>
                </div>
                <div class="blog-name">
                    <h3>
                        <a href="">@blog.Name</a>
                    </h3>
                    <p>
                        @blog.Description   
                    </p>
                </div>
            </div>
        }

       
    </div>
</section>

<section class="brands-section">
    <div class="brands-types">
        <div class="brands-slide">
            <div class="brand-header">
                <span> Popular Brands</span>
            </div>
        </div>
        <div class="brand-pics">
            @foreach (var partner in Model.Partners)
            {
                <div>
                    <a href=""><img src="~/assets/images/@partner.Logo" alt="" /></a>
                </div>
            }
        </div>
    </div>
</section>

<section class="features-section">
    <div class="features d-flex">
        @foreach (var advertising in Model.Advertisings)
        {
            <div class="feature-element col-3 d-flex justify-content-evenly">
                <div class="feature-icon">
                    <img src="~/assets/images/@advertising.Logo" alt="" />
                </div>
                <div>
                    <p class="feature-first-p">@advertising.Title</p>
                    <p class="feature-second-p">@advertising.Description</p>
                </div>
            </div>
        }

    </div>
</section>

<section class="newsletter-section">
    <h5>NEWSLETTER</h5>
    <h4>GET NOTIFIED OF ANY UPDATES!</h4>
    <div class="form-elements">
        <form action="email">
            <input type="email"
                   name="email"
                   placeholder="Your email address"
                   id="email" />
            <button type="submit" class="subs-btn">
                <span><i class="bi bi-envelope-fill envelope"></i></span>
                Subscribe
            </button>
        </form>
    </div>
</section>

<section class="scroll-section">
    <button type="button"
            class="btn btn-danger btn-floating btn-lg"
            id="btn-back-to-top">
        <i class="fas fa-arrow-up"></i>
    </button>
</section>

